# Magic8-Companion Environment Configuration
# Copy this file to .env and update with your settings

# === CORE SYSTEM SETTINGS ===
M8C_SYSTEM_COMPLEXITY=standard

# === GAMMA INTEGRATION SETTINGS (for MLOptionTrading) ===
# Enable enhanced gamma analysis from MLOptionTrading
M8C_ENABLE_ENHANCED_GEX=true

# Path to MLOptionTrading repository (relative or absolute)
M8C_ML_OPTION_TRADING_PATH=../MLOptionTrading

# Integration mode: file (reads from gamma_adjustments.json) or api (future)
M8C_GAMMA_INTEGRATION_MODE=file

# Maximum age for gamma data before refresh (in minutes)
M8C_GAMMA_MAX_AGE_MINUTES=5

# === MARKET DATA SETTINGS ===
M8C_MARKET_DATA_PROVIDER=yahoo
M8C_USE_MOCK_DATA=false

# === INTERACTIVE BROKERS SETTINGS ===
M8C_IB_HOST=127.0.0.1
M8C_IB_PORT=7497
M8C_IB_CLIENT_ID=2

# === LOGGING CONFIGURATION ===
M8C_LOG_LEVEL=INFO
M8C_LOG_TO_FILE=true

# === PERFORMANCE SETTINGS ===
M8C_ENABLE_CACHING=true
M8C_CACHE_EXPIRY_MINUTES=5

# === API KEYS (if using Polygon) ===
# M8C_POLYGON_API_KEY=your_api_key_here

# === ALERT SETTINGS (optional) ===
# M8C_DISCORD_WEBHOOK=your_discord_webhook_url_here
